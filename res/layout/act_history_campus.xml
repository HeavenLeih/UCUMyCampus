<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@drawable/b2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucuccs.ucumycampus.HistoryCampus" >

   

    <Button
        android:id="@+id/btnClearLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myListLoc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="CLEAR" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="HISTORY OF LOCATION"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnClearLoc"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:src="@drawable/line" />

 <ListView
     android:id="@+id/myListLoc"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_above="@+id/btnClearLoc"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/imageView1" >

    </ListView>

 <ImageView
     android:id="@+id/imageView2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/btnClearLoc"
     android:layout_centerHorizontal="true"
     android:src="@drawable/line" />

</RelativeLayout>