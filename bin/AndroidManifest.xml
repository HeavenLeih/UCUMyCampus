<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucuccs.ucumycampus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuCampus"
            android:label="@string/title_activity_menu_campus"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".MapCampus"
            android:label="@string/title_activity_map_campus"
            android:parentActivityName=".MenuCampus" >
        </activity>
        <activity
            android:name=".LocationCampus"
            android:label="@string/title_activity_location_campus"
            android:parentActivityName=".MenuCampus" >
        </activity>
        <activity
            android:name=".HistoryCampus"
            android:label="@string/title_activity_history_campus"
            android:parentActivityName=".History" >
        </activity>
        <activity
            android:name=".DirectionCampus"
            android:label="@string/title_activity_direction_campus"
            android:parentActivityName=".MenuCampus" >
        </activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:parentActivityName=".MenuCampus" >
        </activity>
        <activity
            android:name=".DirectionHistory"
            android:label="@string/title_activity_direction_history"
            android:parentActivityName=".History" >
        </activity>
        <activity
            android:name=".ImageViewingLocation"
            android:label="@string/title_activity_image_viewing_location"
            android:parentActivityName=".LocationCampus" >
        </activity>
        <activity
            android:name=".ImageViewingDirection"
            android:label="@string/title_activity_image_viewing_direction" >
        </activity>
    </application>

</manifest>